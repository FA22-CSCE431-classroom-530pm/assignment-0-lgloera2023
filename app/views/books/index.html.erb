<p id="notice"><%= notice %></p>

<h1>Books</h1>

<%= link_to("View Page List", pages_path, :class => 'action index') %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Price</th>
      <th>Published Date</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.price %></td>
        <td><%= book.publishedDate %></td>
        <td><%= link_to('Show', book_path(book), :class => 'action show') %></td>
        <td><%= link_to('Edit', edit_book_path(book), :class => 'action edit') %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
