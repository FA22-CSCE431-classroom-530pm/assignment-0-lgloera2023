<%= link_to("Back to List", pages_path, :class => 'back-link') %>

<h1>Delete Page</h1>

<%= form_for(@page, :method => 'delete') do |f| %>
    <p>Are you sure you want to delete this page?</p>
    <p><%= @page.book.title %> Page <%= @page.page_number %></p>
    <%= f.submit("Delete Page") %>
<% end %>